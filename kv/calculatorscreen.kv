#: import labels labels

<NumberButton@Button>:
    size_hint_y: 1
    color: 0,0,0,1


<CalculatorScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            cols: 3
            size_hint_y: 1
            TextInput:
                id: calc_inp
                text: ""
                size_hint_x: 5
                background_color: (1,0,0,1) if self.focus else (0,0,1,1)
                foreground_color: 0,1,0,1
            Button:
                text: labels.CalculatorDelete
                size_hint_x: 1
                color: 1, 1, 0, 1
            Button:
                text: labels.CalculatorClear
                size_hint_x: 1
                color: 1, 1, 0, 1

        BoxLayout:
            size_hint_y: 1
            orientation: "horizontal"

            NumberButton:
                text: "1"
            NumberButton:
                text: "2"
            NumberButton:
                text: "3"
            NumberButton:
                text: "+"

        BoxLayout:
            size_hint_y: 1
            orientation: "horizontal"
            NumberButton:
                text: "4"
            NumberButton:
                text: "5"
            NumberButton:
                text: "6"
            NumberButton:
                text: "-"

        BoxLayout:
            size_hint_y: 1
            orientation: "horizontal"
            NumberButton:
                text: "7"
            NumberButton:
                text: "8"
            NumberButton:
                text: "9"
            NumberButton:
                text: "."

        BoxLayout:
            size_hint_y: 1
            orientation: "horizontal"
            NumberButton:
                text: "0"
            NumberButton:
                text: "*"
            NumberButton:
                text: "/"

            Button:
                text: "="
                size_hint_y: 1
                color: 0,1,0,1

