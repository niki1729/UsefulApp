#: import labels labels

<ContentNavigationDrawer>:
    BoxLayout:
        orientation: "vertical"
        MDLabel:
            text: labels.NDChooseWhatYouWant
            color: 1,0,0,1
            size_hint_y: None

        ScrollView:
            MDList:

                OneLineListItem:
                    text: labels.NDHomeScreen
                    on_release:
                        root.nav_drawer.set_state("close")
                        root.screen_manager.current="home_screen"

                OneLineListItem:
                    text: labels.NDCalculator
                    on_press:
                        root.nav_drawer.set_state("close")
                        root.screen_manager.current="calculator_screen"

                OneLineListItem:
                    text: labels.NDConverter
