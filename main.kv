#: import labels labels
#: include kv/homescreen.kv
#: include kv/contentnavigationdrawer.kv
#: include kv/calculatorscreen.kv


Screen:
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        title: labels.TITLE
        elevation: 10
        left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]


    NavigationLayout:
        x: toolbar.height

        ScreenManager:

            size_hint_y: None
            height:root.height - toolbar.height
            id: screen_manager

            HomeScreen:
                name: "home_screen"

            CalculatorScreen:
                name: "calculator_screen"


        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer

